doctype html
html(lang="en")
  head
    // Head content
    header
      nav
        ul
          li
            a(href="/") Home
          li
            a(href="/search") Search by Genre
          li
            a(href="/update") Update a Song
          li
            a(href="/add") Add a Song
          li
            a(href="/user_song") List All Songs
    link(rel="stylesheet", href="addstyles.css")

  body
    // Header content

    main
      h2 Add a Song
      form(action="/add", method="POST")
        label(for="title") Title:
        input(type="text", id="title", name="title", required)
        br
        label(for="artist") Artist:
        input(type="text", id="artist", name="artist", required)
        br
        label(for="genre") Genre:
        input(type="text", id="genre", name="genre", required)
        br
        label(for="popularity") Popularity:
        input(type="number", id="popularity", name="popularity", min="0", max="10", required)
        br
        label(for="releaseDate") Release Date:
        input(type="date", id="releaseDate", name="releaseDate", required)
        br
        input(type="submit", value="Add Song")

    // Footer content
